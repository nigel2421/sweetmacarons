
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Macarons can be read by anyone, but only written to by authenticated users (for reviews)
    match /macarons/{macaronId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Reviews can be created by authenticated users, but only modified by their author.
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.author_uid;
    }

    // Orders can only be read and written by the user who owns them.
    match /orders/{orderId} {
        allow read, write, create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}
